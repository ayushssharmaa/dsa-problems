#include <iostream>
using namespace std;

int main() {
    
    int i,j,n,x=0;
    cin>>n;
    
    for(i=1; i<=n; i++){
          if(i%2==0){
                x=1;
            }
            else{
                x=0;
            }
        for(j=1; j<=i; j++){
          
            x=1-x;
            cout<<x;
        }
        cout<<"\n";
    }
    
	return 0;
}
