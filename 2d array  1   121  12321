#include <iostream>
using namespace std;

int main() {
	
	int i, j,k,l,n;
	cin>>n;
	
	for(i=0; i<n; i++){
	    int a=1;
	    for(j=n-1; j>i; j--){
	        cout<<" ";
	    }
	    for(k=0; k<i; k++){
	        cout<<a;
	        a++;
	    }
	    for(l=a; l>=1; l--){
	        cout<<l;
	    }
	    cout<<"\n";
	}
	
	return 0;
}
