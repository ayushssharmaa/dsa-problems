
        // recursion stair case (easy) 
            
#include <bits/stdc++.h>
using namespace std;

int stairs(int n){
    // base case
    if(n==0) return 1;
    if(n<0) return 0;
    // recursive case
    return stairs(n-1) + stairs(n-2) + stairs(n-3); 
}

int main() {

    int n;
    cin>>n;
    cout<<stairs(n);
}
