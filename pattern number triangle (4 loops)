// pattern star matrix 
#include <iostream>
using namespace std;

int main() {
    int i, j, k, l, n, count=1;
    cin>>n;
    
    for(i=1; i<=n; i++){
        
        for(j=1; j<=n-i; j++){
            cout<<" ";
        }
        for(k=1; k<=i; k++){
            cout<<count;
            count++;
        }
        for(l=1; l<i; l++){
            cout<<count;
            count++;
        }
        cout<<"\n";
    }
    
	return 0;
}
